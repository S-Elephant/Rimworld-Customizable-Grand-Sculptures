<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="SculptureGrand"]/statBases/Beauty</xpath>
		<value>
			<Beauty>420</Beauty> <!-- Default is 240 -->
		</value>
	</Operation>
	
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="SculptureGrand"]/statBases/MaxHitPoints</xpath>
		<value>
			<MaxHitPoints>400</MaxHitPoints> <!-- Default is 250 -->
		</value>
	</Operation>
	
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="SculptureGrand"]/statBases/WorkToMake</xpath>
		<value>
			<WorkToMake>105000</WorkToMake> <!-- Default is 65000 -->
		</value>
	</Operation>
	
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="SculptureGrand"]/costStuffCount</xpath>
		<value>
			<costStuffCount>400</costStuffCount> <!-- Default is 220 -->
		</value>
	</Operation>
	
<!-- ================================ End ================================ -->

</Patch>